# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.plugin :isolate
Hoe.plugin :seattlerb

Hoe.spec 'zombies' do
  developer 'Ryan Davis', 'ryand-ruby@zenspider.com'

  self.rubyforge_name = 'seattlerb'

  extra_deps << ["gosu", "~> 0.7.25"]
  extra_dev_deps << ["rcov", "~> 0.9.9"]
end

